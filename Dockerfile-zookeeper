FROM docker.io/bitnami/zookeeper:3.8

EXPOSE 2181

VOLUME data:/bitnami

ENV ALLOW_ANONYMOUS_LOGIN=yes
ENV KAFKA_SERVICE_PORT=tcp://kafka:9092
ENV KAFKA_SERVICE_PORT_9092_TCP=tcp://kafka:9092
ENV KAFKA_SERVICE_PORT_9092_TCP_ADDR=kafka
ENV KAFKA_SERVICE_PORT_9092_TCP_PORT=9092
ENV KAFKA_SERVICE_PORT_9092_TCP_PROTO=tcp
ENV KAFKA_SERVICE_SERVICE_HOST=kafka
ENV KAFKA_SERVICE_SERVICE_PORT=9092